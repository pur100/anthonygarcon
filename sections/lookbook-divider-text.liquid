{%- if section.settings.enable_bar -%}
  {%- unless section.settings.home_page_only and template != 'index' -%}
    <section id="section-{{ section.id }}" data-section-id="{{ section.id }}">
      <div class="wrap">
        <div class="divider_title">{{ section.settings.title }}</div>
        <div class="divider_content">{{ section.settings.content }}</div>
      </div>
    </section>

    <style>
      #section-{{ section.id }} {
        margin: 80px 0px;
        background: {{ section.settings.background }};
        color: {{ section.settings.text_color }};
        height: {{ section.settings.height }}px;
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
      }

      .divider_title {
        font-size: 40px;
        font-family: "Garamond"
      }
      .divider_content {
        margin: 0 auto;
        font-size: 20px;
        width: 70%
      }

    </style>
  {%- endunless -%}
{%- endif -%}

{% schema %}
{
  "name": "Lookbook divider",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_bar",
      "label": "Enable bar",
      "default": true
    },
    {
      "type": "range",
      "id": "height",
      "label": "Height",
      "min": 10,
      "max": 200,
      "step": 10,
      "default": 100
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#ffffff"
    },
    {
      "type": "richtext",
      "id": "title",
      "label": "Title",
      "default": "<p>This here is the title</p>"
    },
    {
      "type": "text",
      "id": "content",
      "label": "Text",
      "default": "Announce something here"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ]
}
{% endschema %}

