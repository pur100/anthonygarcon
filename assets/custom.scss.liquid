// mobile

  @media screen and (max-width: 940px) {
    .title_container {
      align-items: center;
      flex-direction: column-reverse;

      .content, .title {
        width: 90%;
        p, .titles {
          text-align: center;
          padding-left: 0;
        }
      }
    }

    #section-lookbook-images-template {
      .image_row {
        display: block;
        .image1, .image2 {
          width: 100%;
          margin: 0 auto;
        }
      }

      .quote p {
        font-size: 28px;
      }
    }

    #section-lookbook-divider-text {
        height: auto !important;
        padding: 40px 0px;
    }

    #shopify-section-lookbook-images-block {
      .blockimages > .blockimage {
          flex: initial;
      }
    }
